{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ch-image build",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/ch-image",
      "cwd": "${workspaceFolder}/tmp",
      "args": ["build", "--no-cache", "-t", "xhplcg", "."],
      "env": {
        "PATH": "/data/GIRC/charliecloud/bin:/home/gyh/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"
      },
      "stopOnEntry": false
    },
    {
      "name": "ch-run",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/a.out",
      "args": ["xhplcg", "--", "mpirun", "--help"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/tmp",
      "environment": [
        {
          "name": "PATH",
          "value": "/data/GIRC/charliecloud/bin:/home/gyh/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build ch-run"
    }
  ]
}
